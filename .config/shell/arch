which pacman >/dev/null || return 0

# Arch aliases
alias pac='sudo pacman'
alias pacs='pac -Syu --needed'
alias pacr='pac -R'
alias yays='yay -S --needed'
alias yayr='yay -R'
yas() {
  pkg=$(yay -Pc | cut -d'	' -f1 | fzf --preview 'yay -Si {}')
  test "$pkg" && echo "Install $pkg..." && yay -S "$pkg"
}

