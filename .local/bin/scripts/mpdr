#!/bin/sh -e
# Reload mpd with appropriate config
yadm alt
cd ${XDG_CONFIG_HOME:-/home/janek/.config}/mpd
mv *template ..
mv ../*template .
systemctl --user restart mpd
# https://mpd.readthedocs.io/en/latest/user.html#cross-fading
mpc crossfade 4
mpc mixrampdelay 1
mpc mixrampdb -17
#mpc mixramp_analyzer "yes"
