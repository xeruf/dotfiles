#!/bin/sh
# Find terms in jrnl files and turn them into tags
# Check with jrnl --tags
if test $# -eq 0
then
  set -x
  $0 sleep uni nap cry tech read dev phone bike tour laptop computer piano faith health lens Zinc depression tie girl \
    socha Emacs \
    CB Turi Taura \
    Erlangen Bayreuth Berlin Lichtenfels
  true $?
else
  for arg
  do rpl "(?<!\S)$arg(?!\S)" "@$arg" "$JOURNAL"/*.jrnl # 2>/dev/null
  done
fi
