#!/bin/sh
# Clones a fork and sets a corresponding upstream
# Args:
# - repo name
# - upstream user
# - local user
# - target directory name (and further arguments to clone)
set -e
git-get github.com "$1" "$3" "${@:4}"
test "$2" && git remote add upstream "$(git-repo github.com "$1" "$2")"
git remote -v
