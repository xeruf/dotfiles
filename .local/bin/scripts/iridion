#!/bin/sh -e
# Upload website to iridion
if test $# -eq 0
then echo "$0 site [index.html]"
else

site=$1
case $site in
    (polygon*|nod*) usr=polygon;;
    (*deltapeak*) usr=dp0001;;
    (*) usr=$USER;;
esac
shift
rsync -rv "$@" "iridion:/home/${usr}/web/${site}/public_html/$(test "$#" -gt 1 || test -d "$1" || echo 'index.html')"

fi
